{
  "cSpell.enabled": true,
  "cSpell.enabledLanguageIds": [
    "javascript",
    "typescript"
  ],
  "cSpell.ignorePaths": [
    "**/node_modules/*/**",
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true,
    "source.fixAll.eslint": true
  },
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "files.exclude": {
    "/.git": true,
    "/.DS_Store": true,
    "/node_modules": true,
    "/node_modules/": true
  },
  "files.watcherExclude": {
    "**/node_modules/*/**": true,
  },
}
